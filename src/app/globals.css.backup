@import "tailwindcss";
@plugin '../../hero.ts';
@source '../../node_modules/@heroui/theme/dist/**/*.{js,ts,jsx,tsx}';

@custom-variant dark (&:is(.dark *));

@theme {
  /* Warm subtle gray border colors */
  --color-border: #e7e5e4; /* stone-200 with warmth */
  
  /* Container centering */
  --container-center: true;
  --container-padding: 2rem;
  
  /* Primary color palette */
  --color-primary-50: 240 246 255;
  --color-primary-100: 225 237 255;
  --color-primary-200: 187 214 255;
  --color-primary-300: 157 196 255;
  --color-primary-400: 59 129 225;
  --color-primary-500: 27 100 206;
  --color-primary-600: 23 90 188;
  --color-primary-700: 21 81 169;
  --color-primary-800: 16 67 141;
  --color-primary-900: 7 30 64;
  --color-primary: 27 100 206;
  --color-primary-foreground: 255 255 255;
  
  /* Secondary color palette */
  --color-secondary-50: 254 246 238;
  --color-secondary-100: 253 235 215;
  --color-secondary-200: 250 211 174;
  --color-secondary-300: 246 180 123;
  --color-secondary-400: 240 130 56;
  --color-secondary-500: 237 107 34;
  --color-secondary-600: 222 82 24;
  --color-secondary-700: 185 61 21;
  --color-secondary-800: 147 50 25;
  --color-secondary-900: 118 43 24;
  --color-secondary: 237 107 34;
  --color-secondary-foreground: 255 255 255;
  
  /* Default color palette */
  --color-default-50: 250 250 250;
  --color-default-100: 245 245 244;
  --color-default-200: 231 229 228;
  --color-default-300: 214 211 209;
  --color-default-400: 168 162 158;
  --color-default-500: 120 113 108;
  --color-default-600: 87 83 78;
  --color-default-700: 68 64 60;
  --color-default-800: 41 37 36;
  --color-default-900: 28 25 23;
  --color-default: 231 241 255;
  --color-default-foreground: 73 130 217;
}

@theme dark {
  /* Warm subtle gray border for dark mode */
  --color-border: #44403c; /* stone-600 with warmth */
  
  /* Primary color palette - same for dark mode */
  --color-primary-50: 240 246 255;
  --color-primary-100: 225 237 255;
  --color-primary-200: 187 214 255;
  --color-primary-300: 157 196 255;
  --color-primary-400: 59 129 225;
  --color-primary-500: 27 100 206;
  --color-primary-600: 23 90 188;
  --color-primary-700: 21 81 169;
  --color-primary-800: 16 67 141;
  --color-primary-900: 7 30 64;
  --color-primary: 27 100 206;
  --color-primary-foreground: 255 255 255;
  
  /* Secondary color palette - same for dark mode */
  --color-secondary-50: 254 246 238;
  --color-secondary-100: 253 235 215;
  --color-secondary-200: 250 211 174;
  --color-secondary-300: 246 180 123;
  --color-secondary-400: 240 130 56;
  --color-secondary-500: 237 107 34;
  --color-secondary-600: 222 82 24;
  --color-secondary-700: 185 61 21;
  --color-secondary-800: 147 50 25;
  --color-secondary-900: 118 43 24;
  --color-secondary: 237 107 34;
  --color-secondary-foreground: 255 255 255;
  
  /* Default color palette for dark mode */
  --color-default-50: 250 250 250;
  --color-default-100: 245 245 244;
  --color-default-200: 231 229 228;
  --color-default-300: 214 211 209;
  --color-default-400: 168 162 158;
  --color-default-500: 120 113 108;
  --color-default-600: 87 83 78;
  --color-default-700: 68 64 60;
  --color-default-800: 41 37 36;
  --color-default-900: 28 25 23;
  --color-default: 14 16 20;
  --color-default-foreground: 252 252 252;
}

@layer base {
  /* Ensure proper container centering */
  .container {
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }
  
  /* Fix body alignment issues */
  body {
    margin: 0;
    padding: 0;
  }
}

@layer utilities {
  /* Ensure secondary color utilities are generated */
  .bg-secondary {
    background-color: rgb(var(--color-secondary));
  }
  
  .bg-secondary\/10 {
    background-color: rgb(var(--color-secondary) / 0.1);
  }
  
  .bg-secondary\/20 {
    background-color: rgb(var(--color-secondary) / 0.2);
  }
  
  .text-secondary {
    color: rgb(var(--color-secondary));
  }
  
  .text-secondary\/70 {
    color: rgb(var(--color-secondary) / 0.7);
  }
  
  .border-secondary {
    border-color: rgb(var(--color-secondary));
  }
  
  /* Primary color utilities for consistency */
  .bg-primary {
    background-color: rgb(var(--color-primary));
  }
  
  .bg-primary\/10 {
    background-color: rgb(var(--color-primary) / 0.1);
  }
  
  .text-primary {
    color: rgb(var(--color-primary));
  }
  
  /* Default color utilities */
  .bg-default {
    background-color: rgb(var(--color-default));
  }
  
  .bg-default\/10 {
    background-color: rgb(var(--color-default) / 0.1);
  }
  
  .bg-default\/50 {
    background-color: rgb(var(--color-default) / 0.5);
  }
  
  .text-default {
    color: rgb(var(--color-default));
  }
  
  .text-default\/70 {
    color: rgb(var(--color-default) / 0.7);
  }
  
  .border-default {
    border-color: rgb(var(--color-default));
  }
  
  .border-default\/20 {
    border-color: rgb(var(--color-default) / 0.2);
  }
  input[type="number"]::-webkit-inner-spin-button,
  input[type="number"]::-webkit-outer-spin-button,
  input[type="number"] {
    -webkit-appearance: none; /* IE and Edge */
    -moz-appearance: textfield; /* Firefox */
    margin: 0;
  }
  
  /* Animation utilities */
  .animate-spin {
    animation: spin 1s linear infinite;
  }
  
  .animate-ping {
    animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  .animate-bounce {
    animation: bounce 1s infinite;
  }
  
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  
  @keyframes ping {
    75%, 100% {
      transform: scale(2);
      opacity: 0;
    }
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }
  
  @keyframes bounce {
    0%, 100% {
      transform: translateY(-25%);
      animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
    }
    50% {
      transform: translateY(0);
      animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
    }
  }
}

/* BACKGROUND */
::-webkit-scrollbar {
  width: 8px;
  /* background: #ecedf0; */
  background: #f5f5f5;
  border-radius: 5px;
  height: 6px;
}

/* SCROLL-THUMB */
::-webkit-scrollbar-thumb {
  width: 8px;
  height: 2px;
  background-color: #bcc2d2;
  border-radius: 3px;
}

.heading-1 {
  font-size: clamp(2rem, 1rem + 3vw, 4rem);
  font-weight: bold;
}

.heading-2 {
  font-size: clamp(1.75rem, 1rem + 3vw, 3rem);
  font-weight: bold;
}

.heading-3 {
  font-size: clamp(1.5rem, 1rem + 3vw, 2rem);
  font-weight: 600;
}

.heading-4 {
  font-size: clamp(1.125rem, 1.125rem + 1vw, 1.5rem);
  font-weight: 500;
}

.heading-5 {
  font-size: clamp(1rem, 1rem + 1vw, 1.125rem);
  font-weight: 500;
}

.paragraph {
  @apply text-sm leading-6;
  color: hsl(var(--heroui-foreground) / 0.7);
}

/* CODE JSON SNIPPETS */

.string {
  color: rgb(0, 55, 173);
}
.number {
  color: darkorange;
}
.boolean {
  color: blue;
}
.null {
  color: magenta;
}
.key {
  color: red;
}
/* ************************** */

.blue-gradient {
  background: linear-gradient(90deg, #1b64ce 0%, #8c86f0 100%);
}

/* Chrome, Safari and Opera */
.no-scrollbar::-webkit-scrollbar {
  display: none;
}

.no-scrollbar {
  -ms-overflow-style: none; /* IE and Edge */
  scrollbar-width: none; /* Firefox */
}

@media print {
  .no-print {
    display: none !important;
  }
}